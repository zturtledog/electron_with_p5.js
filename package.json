{
  "name": "APPNAME",
  "version": "1.0.0",
  "description": "A framework for creating interactive enviroments.",
  "main": "main.js",
  "author": "Twwallow Haven Studios",
  "license": "MIT",
  "scripts": {
    "devinit": "npm i electron && npm install electron-builder",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-mac": "electron-builder -m",
    "dist-linux": "electron-builder -l"
  },
  "build": {
    "appId": "com.YOURAPID",
    "mac": {
      "icon": "assets/_icon.png",
      "category": "your.app.category.type"
    },
    "win": {
      "icon": "assets/_icon.png"
    }
  },
  "dependencies": {
    "electron": "^17.1.0",
    "electron_packager": "^2.0.8"
  }
}
